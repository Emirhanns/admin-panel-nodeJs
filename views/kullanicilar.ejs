<!DOCTYPE html>
<html>

<head>
  <title>User List</title>

  <link rel="stylesheet" type="text/css" href="/style/kullanicilar.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>

  
  <%- include('../pages/nav.ejs') %>
  <%- include('../pages/side.ejs') %>
  
  <div class="container">
    <form action="/addUser" method="POST">
      <input type="text" id="input" name="username" placeholder="Enter a username">
      <button id="addButton">Kullanıcı Ekle</button>
    </form>
    <table class="user-table">
      <thead>
        <tr>
          <th>Kullanıcılar</th>
          <th>Kullanıcıyı Sil</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td>
              <%= user.username %>
            </td>
            <td><a href="/deleteUser/<%= user._id %>"><i class="fa-solid fa-rectangle-xmark"></i></a></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>

</html>
